@using ProjeOOPDers1.Entity
@model List<Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_CoreLayout.cshtml";
}

<h1>ÜRÜN SAYFASI</h1>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Ürün Adı</th>
            <th>Fiyat</th>
            <th>Stok Miktarı</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var InfoStock in Model)
        {
            <tr>
                <td>@InfoStock.Id</td>
                <td>@InfoStock.Name</td>
                <td>@InfoStock.Price</td>
                <td>@InfoStock.Stock</td>
                <td>
                    <!-- Açılır Menü -->
                    <div class="dropdown">
                        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                             <i class="bi bi-gear"></i> <!-- Örnek: "bi-gear" Bootstrap Icons ikonu -->
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                            <li><a class="dropdown-item" href="/Product/UpdateProduct/@InfoStock.Id"><i class="bi bi-pencil"></i> Düzenle</a></li>
                            <li><a class="dropdown-item" href="/Product/DeleteProduct/@InfoStock.Id"><i class="bi bi-trash"></i> Sil</a></li>
                            <li><a class="dropdown-item" href="#"><i class="bi bi-eye"></i> Bütümü Göster</a></li>
                        </ul>
                    </div>
                </td>

            </tr>
        }
       
     
    </tbody>
</table>

<a href="/Product/AddProduct/" class="btn btn-primary">Ürün Ekle</a>





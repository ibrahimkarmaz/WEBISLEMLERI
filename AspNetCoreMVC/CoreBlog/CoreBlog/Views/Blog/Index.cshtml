@model List<EntityLayer.Concrete.Blog>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<section class="main-content-w3layouts-agileits">
	<div class="container">
		<h3 class="tittle">Blog Posts</h3>
		<div class="inner-sec">
			<!--left-->
			<div class="left-blog-info-w3layouts-agileits text-left">
				<div class="row">
					@foreach (var item in Model)
					{
					<div class="col-lg-4 card border-0 mb-2">
						<a href="#">
							<img src=@item.BlogImage class="card-img-top img-fluid" alt="">
						</a>
						<div class="card-body">
							<ul class="blog-icons my-4">
								<li>
									<a href="#">
										<i class="far fa-calendar-alt"></i> @(((DateTime)item.BlogCreateDate).ToString("dd-MMM-yyyy"))
									</a>
								</li>
								<li class="mx-2">
									<a href="#">
										<i class="far fa-comment"></i> 0
									</a>
								</li>
								<li>
									<a href="#">
										<i class="fas fa-eye"></i> @item.Category.CategoryName
									</a>
								</li>

							</ul>
							<h5 class="card-title">
								<a href="#">@item.BlogTitle</a>
							</h5>
							<p class="card-text mb-3">
									@(item.BlogContent.Length > 150 ? item.BlogContent.Substring(0, item.BlogContent.Substring(0, 155).LastIndexOf(" ")) + "..." : item.BlogContent + "...")
							</p>
								<a asp-controller="Blog" asp-action="BlogDetails" asp-route-id=@item.BlogID class="btn btn-outline-primary rounded-3 d-block">
									Devamını Oku <i class="bi bi-book-fill"></i>
								</a>
						</div>
					</div>
					}
				</div>
				<!--//left-->
			</div>
		</div>
	</div>
</section>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">

<link href="~/web/css/bootstrap.css" rel="stylesheet" />
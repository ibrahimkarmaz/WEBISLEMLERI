@model List<EntityLayer.Concrete.Blog>
<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Son 10 Blog</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th> # </th>
                                <th> Başlık </th>
                                <th> Kategori </th>
                                <th> Tarih </th>
                                <th>DETAYLAR</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                   @item.BlogID
                                </td>
                                    <td>  <img src="@item.BlogImage" class="mr-2" alt="image"> @item.BlogTitle </td>
                                <td>
                                    <label class="badge badge-gradient-success rounded-pill">@item.Category.CategoryName</label>
                                </td>
                                    <td> @(((DateTime)item.BlogCreateDate).ToString("dd/MMM/yyyy")) </td>
                                    <td> <a class="btn btn-sm btn-outline-dark rounded-pill" asp-controller="Blog" asp-action="BlogReadAll" asp-route-id=@item.BlogID>Detaylar</a> </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


@model List<EntityLayer.Concrete.Blog>

<div class="blog-grids row mb-3">
	@foreach (var item in Model)
	{
		<div class="col-md-5 blog-grid-left">
			<a asp-controller="Blog" asp-action="BlogReadAll" asp-route-id=@item.BlogID>
				<img src="@item.BlogImage" class="card-img-top img-fluid" alt="">
			</a>
		</div>

		<div class="col-md-7 blog-grid-right">

			<h5>
				<a asp-controller="Blog" asp-action="BlogReadAll" asp-route-id=@item.BlogID>@(item.BlogContent.Length > 50 ? item.BlogContent.Substring(0, item.BlogContent.Substring(0, 55).LastIndexOf(" ")) + "..." : item.BlogContent + "..."):..........</a>
			</h5>
			<div class="sub-meta">
				<span>
					<i class="far fa-clock"></i> @(Convert.ToDateTime(item.BlogCreateDate).ToString("dd-MMM-yyyy"))
				</span>
			</div>
		</div>

	}
</div>

@model List<EntityLayer.Concrete.Message2>
@{
    ViewData["Title"] = "InBox";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1 class="fs-3 fw-bold">Gelen Kutusu</h1>

<table class="table table-dark table-bordered rounded-5">
    <thead>
        <tr>
            <td>#</td>
            <td>Konu</td>
            <td>Gönderen</td>
            <td>Tarih</td>
            <td>Mesajı Aç</td>
        </tr>
    </thead>
    <tbody class="table-hover">
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MessageID</td>
                <td>@item.Subject</td>
                <td>@item.SenderUser.WriterName</td>
                <td>@(((DateTime)item.MessageDate).ToString("dd/MMM/yyyy")) </td>
                <td> <a asp-controller="Message" asp-action="MessageDetails" asp-route-id=@item.MessageID class="btn btn-sm btn-warning rounded-pill">Mesajı Aç</a></td>
            </tr>
        }
    </tbody>
</table>



@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<EntityLayer.Concrete.Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<table class="table table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Kategori Adı</th>
            <th>Pasif Yap</th>
            <th>Aktif Yap</th>
            <th>Düzenle</th>
        </tr>
    </thead>
    <tbody>
      
        @foreach (var item in Model)
        {
            <tr>
                <th>@item.CategoryID</th>
            <td>@item.CategoryName</td>
                <td><a class="btn btn-danger" asp-controller="Category" asp-action="CategoryDelete" asp-route-id=@item.CategoryID>Pasif Yap</a></td>
                <td><a class="btn btn-warning" href="#">Aktif Yap</a></td>
            <td><a class="btn btn-success" href="#">Düzenle</a></td>
              </tr>
        }
      
    </tbody>
</table>
<br />
<a class="btn btn-outline-primary" asp-controller="Category" asp-action="AddCategory">YENİ KATEGORİ EKLE</a>
<br />
@Html.PagedListPager((IPagedList)Model,page=>Url.Action("Index",new {page}))
